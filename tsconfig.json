{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "target": "ES2020",
    "lib": ["es2020"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
