{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    
    // CRITICAL CHANGES FOR ES MODULES:
    "module": "NodeNext", // or "ESNext" - "NodeNext" is best for Node.js
    "moduleResolution": "NodeNext", // Must match module setting
    
    // Environment Settings
    "target": "ES2020",
    
    // ES Module Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Type definitions
    "types": ["node"],
    "lib": ["ES2020"],
    
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // ES Module Specific
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  
  // Include source files
  "include": ["src/**/*"],
  
  // Exclude node_modules and build outputs
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}